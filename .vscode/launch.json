    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch current file",
            "request": "launch",
            "type": "pwa-chrome",
            "file": "${file}"
        },
        {
            "name": "Launch index.html",
            "request": "launch",
            "type": "pwa-chrome",
            "preLaunchTask": "${defaultBuildTask}",
            "file": "${workspaceFolder}/build/index.html"
        }
    ]
}